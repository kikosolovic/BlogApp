@model IEnumerable<Rating.Models.content>
@{
    ViewBag.Title = "Index";
}

<div>
    @foreach (var item in Model)
    {
        <hr />
        <h3>
            @Html.ActionLink(item.title, "Details", "content", new { id = item.postId }, null)
        </h3>
        <p>
            @item.rating
        </p>
        if (Session["userId"] != null && Session["userId"].ToString() == item.authorId.ToString() || Session["isAdmin"] != null && Session["isAdmin"].ToString() == "true")
        {
    <div>
        @Html.ActionLink("Edit", "Edit", "content", new { id = item.postId }, null) |
        @Html.ActionLink("Delete", "Delete", "content", new { id = item.postId }, null)
    </div>
        }

    }
</div>